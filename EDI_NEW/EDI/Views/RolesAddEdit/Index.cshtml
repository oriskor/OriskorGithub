@model IEnumerable<EDI.Models.role_master>

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<style>
    .hiHover{

    }
    .hiHover :hover {
        background-color: white;
    }
</style>
<div style="font-family:Arial">
    <h2>Role Details</h2>

    <p>
        @Html.ActionLink("Add New Role", "Create", new object { }, new { @class = "btn btn-outline-info" })
    </p>
    <div class="col-lg-12 linkone">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table full-color-table full-inverse-table hover-table">
                        <thead>
                            <tr>
                                <th>
                                    @*  @Html.DisplayNameFor(model => model.roll_name)*@
                                    Role Name
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.roll_name)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.role_id }, new { @class="hiHover" }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.role_id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id=item.role_id })
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
